{
  "name": "@relaycorp/keystore-db",
  "version": "1.0.0",
  "author": {
    "email": "no-reply@relaycorp.tech",
    "name": "Relaycorp, Inc.",
    "url": "https://relaycorp.tech/"
  },
  "description": "TypeORM-based Private and Public Key Store extension for Awala in JavaScript",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/relaycorp/keystore-db-js",
  "homepage": "https://docs.relaycorp.tech/keystore-db-js/",
  "license": "MIT",
  "keywords": [
    "awala",
    "typeorm"
  ],
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "static-checks": "run-p static-checks:*",
    "static-checks:lint": "tslint --project .",
    "static-checks:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test": "jest --coverage",
    "test:ci": "run-s build test:ci:unit",
    "test:ci:unit": "jest --config jest.config.ci.js --coverage",
    "doc-api": "typedoc src/index.ts --out build/docs",
    "clean": "del-cli build test"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "@relaycorp/relaynet-core": "^1.49.2",
    "buffer-to-arraybuffer": "0.0.6",
    "typeorm": "^0.2.34"
  },
  "peerDependencies": {
    "@relaycorp/relaynet-core": "< 2.0",
    "typeorm": "< 1.0"
  },
  "devDependencies": {
    "@relaycorp/relaynet-testing": "^1.3.0",
    "@relaycorp/shared-config": "^1.5.0",
    "@types/jest": "^26.0.23",
    "del-cli": "^4.0.0",
    "jest": "^24.9.0",
    "jest-extended": "^0.11.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2",
    "ts-jest": "^24.3.0",
    "ts-node": "^10.1.0",
    "tslint": "^5.20.1",
    "typedoc": "^0.21.4",
    "typescript": "^4.3.5"
  },
  "prettier": "@relaycorp/shared-config/.prettierrc.json",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  }
}
