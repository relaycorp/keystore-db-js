{
  "name": "@relaycorp/keystore-db",
  "version": "1.0.0",
  "author": {
    "email": "no-reply@relaycorp.tech",
    "name": "Relaycorp, Inc.",
    "url": "https://relaycorp.tech/"
  },
  "description": "TypeORM-based Private and Public Key Store extension for Awala in JavaScript",
  "typings": "build/index.d.ts",
  "module": "build/index.js",
  "repository": "https://github.com/relaycorp/keystore-db-js",
  "homepage": "https://docs.relaycorp.tech/keystore-db-js/",
  "license": "MIT",
  "keywords": [
    "awala",
    "typeorm"
  ],
  "scripts": {
    "build": "run-s clean transpile",
    "transpile": "tsc",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "static-checks": "run-p static-checks:*",
    "static-checks:lint": "tslint --project .",
    "static-checks:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test": "jest --coverage",
    "test:ci": "run-s build test:ci:unit",
    "test:ci:unit": "jest --config jest.config.ci.js --coverage",
    "doc-api": "typedoc src/index.ts --out build/docs",
    "clean": "del-cli build test"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {},
  "devDependencies": {
    "@relaycorp/shared-config": "^1.4.13",
    "@types/jest": "^26.0.23",
    "del-cli": "^3.0.0",
    "jest": "^24.9.0",
    "jest-extended": "^0.11.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "ts-jest": "^24.3.0",
    "ts-node": "^10.0.0",
    "tslint": "^5.20.1",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  },
  "prettier": "@relaycorp/shared-config/.prettierrc.json",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  }
}
